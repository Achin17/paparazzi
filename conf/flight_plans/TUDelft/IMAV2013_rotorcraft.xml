<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="195" ground_alt="180" lat0="43.533642" lon0="1.496709" max_dist_from_home="500" name="IMAV2013_ROTORCRAFT" qfu="190" security_height="2.5">
  <header>
#include "subsystems/ahrs.h"
#include "modules/TUDelft/imav2013.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0" y="0"/>
    <waypoint name="STDBY" x="11" y="80"/>
    <waypoint name="TD" x="0" y="0"/>
    <waypoint lat="43.534801" lon="1.497632" name="Arch1"/>
    <waypoint lat="43.534355" lon="1.496377" name="Arch2"/>
    <waypoint name="VTOL" x="45.4" y="58.0"/>
    <waypoint lat="43.534630" lon="1.495896" name="DZ1"/>
    <waypoint lat="43.534087" lon="1.497365" name="DZ2"/>
    <waypoint lat="43.534582" lon="1.498288" name="DZ3"/>
    <waypoint lat="43.535023" lon="1.497519" name="DZ4"/>
    <waypoint lat="43.535850" lon="1.494903" name="_FA1"/>
    <waypoint lat="43.532509" lon="1.495324" name="_FA2"/>
    <waypoint lat="43.534212" lon="1.501711" name="_FA3"/>
    <waypoint lat="43.536780" lon="1.499584" name="_FA4"/>
    <waypoint lat="43.535594" lon="1.495163" name="_SFA1"/>
    <waypoint lat="43.532720" lon="1.495488" name="_SFA2"/>
    <waypoint lat="43.534308" lon="1.501018" name="_SFA3"/>
    <waypoint lat="43.536452" lon="1.499374" name="_SFA4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="_FA4"/>
      <corner name="_FA3"/>
      <corner name="_FA2"/>
      <corner name="_FA1"/>
    </sector>
    <sector color="orange" name="Small_Flight_Area">
      <corner name="_SFA4"/>
      <corner name="_SFA3"/>
      <corner name="_SFA2"/>
      <corner name="_SFA1"/>
    </sector>
  </sectors>
  <includes>
    <include name="Safety" procedure="IMAV2013_safety.xml">
      <with from="goto_land" to="Land"/>
      <with from="goto_mission" to="Go_Mission"/>
    </include>
  </includes>
  <exceptions/>
  <blocks>
    <block name="Init">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid() || gps.pacc > 1500 || !(ahrs.status == AHRS_RUNNING)"/>
    </block>
    <block name="Geo_init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
      <set value="POS_BFP_OF_REAL(WaypointAlt(WP_STDBY) + ((AC_ID%2)*5))" var="waypoints[WP_STDBY].z"/>
    </block>
    <block name="Start Engine" strip_button="Takeoff" strip_icon="takeoff.png">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="TRUE" vmode="throttle"/>
    </block>
    <block name="Takeoff">
      <set value="0" var="autopilot_flight_time"/>
      <exception cond="!autopilot_motors_on" deroute="Start Engine"/>
      <exception cond="stateGetPositionEnu_f()->z > 3.0" deroute="Go_Mission"/>
      <stay climb="0.7" vmode="climb" wp="HOME"/>
    </block>
    <block name="Go_Mission">
      <call fun="imav2013_goto_mission()"/>
    </block>
    <block name="VTOL">
      <go wp="VTOL"/>
    </block>
    <block name="Precision Landing">
      <exception cond="!nav_is_in_flight()" deroute="Precision Landed"/>
      <stay climb="-0.8" vmode="climb" wp="VTOL"/>
    </block>
    <block name="Precision Landed">
      <exception cond="block_time > 12" deroute="Takeoff after VTOL"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff after VTOL">
      <exception cond="stateGetPositionEnu_f()->z > 3.0" deroute="Go_Mission"/>
      <stay climb="0.5" vmode="climb" wp="VTOL"/>
    </block>
    <block name="Dropzone_1">
      <go wp="DZ1"/>
      <stay until="stage_time>10" wp="DZ1"/>
      <call fun="imav2013_dropball()"/>
      <stay until="stage_time>3" wp="DZ1"/>
      <deroute block="Go_Mission"/>
    </block>
    <block name="Dropzone_2">
      <go wp="DZ2"/>
      <stay until="stage_time>10" wp="DZ2"/>
      <call fun="imav2013_dropball()"/>
      <stay until="stage_time>3" wp="DZ2"/>
      <deroute block="Go_Mission"/>
    </block>
    <block name="Dropzone_3">
      <go wp="DZ3"/>
      <stay until="stage_time>10" wp="DZ3"/>
      <call fun="imav2013_dropball()"/>
      <stay until="stage_time>3" wp="DZ3"/>
      <deroute block="Go_Mission"/>
    </block>
    <block name="Dropzone_4">
      <go wp="DZ4"/>
      <stay until="stage_time>10" wp="DZ4"/>
      <call fun="imav2013_dropball()"/>
      <stay until="stage_time>3" wp="DZ4"/>
      <deroute block="Go_Mission"/>
    </block>
    <block name="Arch">
      <go from="Arch2" hmode="route" wp="Arch1"/>
      <deroute block="Go_Mission"/>
    </block>
    <block name="Land">
      <go wp="TD"/>
    </block>
    <block name="Flare">
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="Landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
