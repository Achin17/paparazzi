<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="90" ground_alt="0" lat0="32.001138" lon0="-81.842444" max_dist_from_home="7000" name="Atmov helopad test" security_height="100">
  <header>
#include "autopilot.h"
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="-1.2" y="-6.0"/>
    <waypoint name="CLIMB" x="2.7" y="5.4"/>
    <waypoint alt="80.0" name="STDBY" x="12.7" y="0.9"/>
    <waypoint lat="32.002166" lon="-81.841310" name="Waypt1"/>
    <waypoint alt="110.0" lat="32.006519" lon="-81.834056" name="Waypt2"/>
    <waypoint alt="100.0" lat="32.007586" lon="-81.830361" name="Waypt3"/>
    <waypoint alt="100.0" lat="32.009887" lon="-81.830019" name="Waypt4"/>
    <waypoint alt="100.0" lat="32.009999" lon="-81.833260" name="Waypt5"/>
    <waypoint alt="110.0" lat="32.007464" lon="-81.835460" name="Waypt6"/>
    <waypoint alt="80.0" lat="32.001526" lon="-81.841581" name="Waypt7"/>
    <waypoint alt="60.0" lat="32.000834" lon="-81.841789" name="45trans"/>
    <waypoint alt="-5.0" lat="32.000198" lon="-81.842143" name="90trans"/>
    <waypoint lat="32.000150" lon="-81.842333" name="TD"/>
  </waypoints>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavResurrect()"/>
    </block>
    <block name="ThrottleTakeoff" strip_button="ThrottleTakeoff">
      <call fun="NavSetTransitionPercentage(100)"/>
      <call fun="DisarmGroundDetectSwitch()"/>
      <exception cond="ins_enu_pos.z > POS_BFP_OF_REAL(40.)" deroute="ATMOVinit"/>
      <attitude pitch="0" roll="0" throttle="0.75" until="ins_enu_pos.z > POS_BFP_OF_REAL(10.)" vmode="throttle"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="1" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <go wp="STDBY"/>
      <call fun="NavSetTransitionPercentage(50)"/>
    </block>
    <block name="ATMOVinit">
      <call fun="DisarmGroundDetectSwitch()"/>
    </block>
    <block name="Waypt1">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="Waypt1"/>
    </block>
    <block name="Waypt2">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="Waypt2"/>
    </block>
    <block name="Waypt3">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="Waypt3"/>
    </block>
    <block name="Waypt4">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="Waypt4"/>
    </block>
    <block name="Waypt5">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="Waypt5"/>
    </block>
    <block name="Waypt6">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="Waypt6"/>
    </block>
    <block name="Waypt7">
      <call fun="DisarmGroundDetectSwitch()"/>
      <call fun="NavSetTransitionPercentage(0)"/>
      <go wp="Waypt7"/>
    </block>
    <block name="45trans">
      <go wp="45trans"/>
      <call fun="NavSetTransitionPercentage(50)"/>
    </block>
    <block name="hoverTrans">
      <go wp="90trans"/>
      <call fun="NavSetTransitionPercentage(100)"/>
    </block>
    <block name="startTouchdown">
      <stay wp="TD"/>
      <deroute block="landhere"/>
    </block>
    <block name="landhere" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="ArmGroundDetectSwitch()"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.4" vmode="climb" wp="TD"/>
    </block>
  </blocks>
</flight_plan>
