<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="343" ground_alt="335" lat0="-27.2172864" lon0="151.2377145" max_dist_from_home="120" name="Delft Basic" security_height="2"> <!-- test field outback -->
<!-- <flight_plan alt="8" ground_alt="0" lat0="52.1682020" lon0="4.4130950" max_dist_from_home="120" name="Delft Basic" security_height="2"> --> <!-- taxi -->
<!-- <flight_plan alt="8" ground_alt="0" lat0="52.170358" lon0="4.427702" max_dist_from_home="120" name="Delft Basic" security_height="2"-->  <!--kite power -->
  <header>
    #include "autopilot.h"
    #include "subsystems/datalink/datalink.h"
    #include "subsystems/electrical.h"
    #include "subsystems/radio_control.h"
    #include "modules/vision_outback/vision_outback.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="17.7" y="1.8"/>
    <waypoint height="20.0" name="STDBY" x="1.8" y="-4.9"/>
    <waypoint height="50.0" name="p1" x="-70.0" y="-0.0"/>
    <waypoint height="50.0" name="p2" x="70.0" y="-0.0"/>
    <waypoint height="50.0" name="p3" x="0" y="-70.0"/>
    <waypoint height="50.0" name="p4" x="0" y="70.0"/>
    <waypoint name="TD" x="5.6" y="-10.9"/>
    <waypoint height="50.0" name="JOE_reported" x="0" y="0"/>
    <waypoint height="30.0" name="JOE_found" x="0" y="110"/>
    <waypoint height="30.0" name="TD_mrk" x="0" y="25"/>
  </waypoints>
  <exceptions>
    <exception cond="((radio_control.status == RC_REALLY_LOST) &&
      !(IndexOfBlock('Takeoff') > nav_block) &&
      !(nav_block >= IndexOfBlock('land here')) &&
      (autopilot_in_flight() == true) )" deroute="ComeBackAndLand"/>
    <exception cond="(datalink_time > 60 &&
      !(datalink_time > 120) &&
      !(IndexOfBlock('Takeoff') > nav_block) &&
      !(nav_block >= IndexOfBlock('land here')) &&
      (autopilot_in_flight() == true) )" deroute="DatalinkLoss"/>
    <exception cond="(electrical.bat_low &&
      !(IndexOfBlock('Holding point') > nav_block) &&
      !(nav_block >= IndexOfBlock('land here')) &&
      (autopilot_in_flight() == true) )" deroute="ComeBackAndLand"/>
    <exception cond="(electrical.bat_critical &&
      !(IndexOfBlock('Holding point') > nav_block) &&
      !(nav_block >= IndexOfBlock('land here')) &&
      (autopilot_in_flight() == true) )" deroute="land here"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call_once fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <call fun="enableVisionFindJoe(false)" loop="false"/>
      <call fun="enableVisionDescent(false)" loop="false"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call_once fun="NavResurrect()"/>
      <call_once fun="waypoint_set_here_2d(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <call fun="enableVisionFindJoe(false)" loop="false"/>
      <call fun="enableVisionDescent(false)" loop="false"/>
      <stay wp="STDBY"/>
    </block>
    <block name="stay_joe_found_static">
      <call fun="enableVisionFindJoe(false)" loop="false"/>
      <call fun="enableVisionDescent(false)" loop="false"/>
      <stay wp="JOE_found"/>
    </block>
    <block name="stay_joe_found">
      <call fun="enableVisionFindJoe(true)" loop="false"/>
      <call fun="enableVisionDescent(true)" loop="false"/>
      <stay wp="JOE_found"/>
    </block>
    <block name="route_findjoe">
      <call fun="enableVisionFindJoe(true)" loop="false"/>
      <exception cond="vision_timeout " deroute="Standby"/>
      <exception cond="vision_found_joe " deroute="goto_joe_found"/>
      <go  wp="JOE_reported"/>
      <circle radius="-30" wp="JOE_reported" until="fabs(ANGLE_FLOAT_OF_BFP(nav_circle_radians)) > 6.28"/>
      <circle radius="-50" wp="JOE_reported" until="fabs(ANGLE_FLOAT_OF_BFP(nav_circle_radians)) > 6.28"/>
      <circle radius="-70" wp="JOE_reported" until="fabs(ANGLE_FLOAT_OF_BFP(nav_circle_radians)) > 6.28"/>
<!--      <circle radius="-90" wp="JOE_reported" until="fabs(ANGLE_FLOAT_OF_BFP(nav_circle_radians)) > 6.28"/>-->
<!--      <go from="p1" hmode="route" wp="p2"/>-->
<!--      <go from="p2" hmode="route" wp="p3"/>-->
<!--      <go from="p3" hmode="route" wp="p4"/>-->
<!--      <go from="p4" hmode="route" wp="p1"/>-->
<!--      <deroute block="stay_p1"/>-->
    </block>
    <block name="goto_joe_found">      
      <stay wp="JOE_found" until="stage_time>10"/>
    </block>
    <block name="land_mrk">
      <call_once fun="waypoint_set_here(WP_TD_mrk)"/>
      <call fun="enableVisionDescent(true)" loop="false"/>
      <call fun="enableVisionFindJoe(true)" loop="false"/>
      <go wp="TD_mrk"/>
    </block>
    <block name="descent_mrk">
      <exception cond="5.0 > stateGetPositionEnu_f()->z" deroute="descent_slow_mrk"/>
      <exception cond="5.0 > vision_height" deroute="descent_slow_mrk"/>
      <exception cond="vision_timeout " deroute="Standby"/>
      <exception cond="!vision_outback_enable_landing " deroute="Standby"/>
      <stay climb="-1" vmode="climb" wp="TD_mrk"/>
    </block>
    <block name="descent_slow_mrk">
      <exception cond="het_moment" deroute="landed"/>
      <exception cond="vision_timeout " deroute="Standby"/>
      <exception cond="!vision_outback_enable_landing " deroute="Standby"/>
      <stay climb="-0.3" vmode="climb" wp="TD_mrk"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call_once fun="waypoint_set_here_2d(WP_TD)"/>
      <deroute block="land"/>
    </block>
    <block name="land on joe_found">
      <go wp="JOE_found"/>
      <call fun="NavCopyWaypoint(WP_TD,WP_JOE_found)" loop="false"/>
      <deroute block="land"/>
    </block>
    <block name="land">
    <call fun="enableVisionDescent(true)" loop="false"/>
      <go wp="TD"/>
    </block>
    <block name="descent">
      <exception cond="5.0 > stateGetPositionEnu_f()->z" deroute="descent_slow"/>
      <exception cond="5.0 > vision_height" deroute="descent_slow"/>
      <exception cond="vision_timeout " deroute="Standby"/>
      <exception cond="!vision_outback_enable_landing " deroute="Standby"/>
      <stay climb="-1" vmode="climb" wp="TD"/>
    </block>
    <block name="descent_slow">
      <exception cond="het_moment" deroute="landed"/>
      <exception cond="vision_timeout " deroute="Standby"/>
      <exception cond="!vision_outback_enable_landing " deroute="Standby"/>
      <stay climb="-0.5" vmode="climb" wp="TD"/>
    </block>    
    <block name="landed">
      <call fun="enableVisionFindJoe(false)" loop="false"/>
      <call fun="enableVisionDescent(false)" loop="false"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="ComeBackAndLand">
      <go wp="HOME"/>
      <deroute block="land here"/>
    </block>
    <block name="DatalinkLoss">
      <call_once fun="waypoint_set_here_2d(WP_TD)"/>
      <stay until="stage_time>60" wp="TD"/>
      <deroute block="ComeBackAndLand"/>
    </block>
  </blocks>
</flight_plan>
