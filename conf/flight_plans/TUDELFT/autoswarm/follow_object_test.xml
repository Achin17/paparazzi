<!DOCTYPE flight_plan SYSTEM "../../flight_plan.dtd">

<flight_plan alt="1.0" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="25" name="Bebop avoid orange TU Delft Cyberzoo" security_height="0.4">
  <header>
#include "autopilot.h"
#include "subsystems/ahrs.h"
#include "subsystems/electrical.h"
#include "subsystems/datalink/datalink.h"
#include "modules/computer_vision/autoswarm/autoswarm_opencv.h"
</header>
  <waypoints>
    <waypoint name="HOME" 	x="1.0" y="1.0"/>
    <waypoint name="_TD" 	x="1.0" y="1.0"/>
    <waypoint name="STDBY" 	x="1.0" y="1.0"/>
    <waypoint name="_GOAL" 	x="1.0" y="0.0"/>
    <waypoint name="_CAM" 	x="1.0" y="0.0"/>
    <waypoint name="GLOBAL" lat="51.9906375" lon="4.3767963"/>
    <waypoint lat="51.9906258" lon="4.3768571" name="CZ1"/>
    <waypoint lat="51.9905925" lon="4.3767779" name="CZ2"/>
    <waypoint lat="51.9906426" lon="4.3767220" name="CZ3"/>
    <waypoint lat="51.9906763" lon="4.3768037" name="CZ4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="CyberZoo">
      <corner name="CZ1"/>
      <corner name="CZ2"/>
      <corner name="CZ3"/>
      <corner name="CZ4"/>
    </sector>
  </sectors>
  <exceptions>
    <exception cond="!InsideCyberZoo(GetPosX(), GetPosY())" deroute="Land here"/>
    <exception cond="LessThan(5, datalink_time)" deroute="Land here"/>
    <exception cond="!GpsFixValid()" deroute="Land here" />
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 2)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
 	  <!-- <call fun="NavSetGroundReferenceHere()"/> Messes up the InsideCyberZoo function-->   
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="r" name="Start Engine" strip_button="Start engines" strip_icon="resurrect.png">
      <call fun="NavResurrect()"/>
      <call fun="NavSetWaypointHere(WP__TD)"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="t" name="Takeoff">
      <call fun="NavSetWaypointHere(WP__TD)"/>
    </block>
    <block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>
    <block name="Swarm" strip_button="Swarm" strip_icon="lookfore.png">
		<call fun="setSwarmMode(2)"/>
    	<call fun="nav_set_heading_towards_waypoint(WP__CAM)"/>
    	<stay wp="_GOAL"/>
    </block>
    <block name="Swarm Home">
    	<exception cond="amIhome()" deroute="Land"/>
		<call fun="NavCopyWaypointPositionOnly(WP_GLOBAL, WP__TD)"/>
		<call fun="setGlobalMode(0)"/>
		<call fun="setSwarmMode(1)"/>
		<call fun="nav_set_heading_towards_waypoint(WP__CAM)"/>
    	<stay wp="_GOAL"/>
    </block>
    <block key="l" name="Land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP__TD)"/>
      <go wp="_TD"/>
    </block>
    <block name="Land">
      <go wp="_TD"/>
    </block>
    <block name="Flare">
      <exception cond="LessThan(GetPosAlt(), 0.15)" deroute="Landed"/> <!-- TODO: see if this also works outside optitrack! -->
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="_TD"/>
    </block>
    <block name="Landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="circle_cw">
      <set var="WV_GLOBAL_ATTRACTOR" value="2"/>
      <deroute block="Swarm"/>
    </block>
    <block name="circle_ccw">
      <set var="WV_GLOBAL_ATTRACTOR" value="3"/>
      <deroute block="Swarm"/>
    </block>
    <block name="bucket">
      <set var="WV_GLOBAL_ATTRACTOR" value="1"/>
      <deroute block="Swarm"/>
    </block>
    <block name="spread_out">
      <set var="WV_SWARM_SEPERATION" value="WV_SWARM_SEPERATION+0.125"/>
      <deroute block="Swarm"/>
    </block>
    <block name="spread_in">
      <set var="WV_SWARM_SEPERATION" value="WV_SWARM_SEPERATION-0.125"/>
      <deroute block="Swarm"/>
    </block>
    <block name="inc_circle">
      <set var="WV_GLOBAL_CIRCLE_R" value="WV_GLOBAL_CIRCLE_R+0.125"/>
      <deroute block="Swarm"/>
    </block>
    <block name="dec_circle">
      <set var="WV_GLOBAL_CIRCLE_R" value="WV_GLOBAL_CIRCLE_R-0.125"/>
      <deroute block="Swarm"/>
    </block>
  </blocks>
</flight_plan>
