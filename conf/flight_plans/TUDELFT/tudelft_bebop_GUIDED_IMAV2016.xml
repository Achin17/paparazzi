<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan
        name="Flight Plan"
        lat0="51.990634" lon0="4.376789"
        ground_alt="0"
        security_height="0.4"
        max_dist_from_home="8"
        alt="2.0">

  <header>
    #define NOM_FLIGHT_ALT 1.5  // nominal flight altitude
    #include "guidance/guidance_h.h"
  </header>

  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
  </waypoints>

  <blocks>
    <block name="Wait">
      <while cond="1"/>
    </block>

    <block name="Geo init">
      <call_once fun="ResetAlt()"/>
      <while cond="1"/>
    </block>

    <block name="Take-off">
      <call fun="StartEngines()"/>
      <call_once fun="ResetAlt()"/>
      <call fun="TakeOff(0.2)"/>
      <call fun="WaitUntilAltitude(NOM_FLIGHT_ALT - 0.2)"/>
    </block>

    <block name="Hover after take-off">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <while cond="2 > block_time"/>
    </block>

    <block name="Approach building">
      <!-- TODO -->
    </block>

    <block name="Search entrance">
      <!-- TODO -->
    </block>

    <block name="Approach entrance">
      <!-- TODO -->
    </block>

    <block name="Fly through entrance">
      <call_once fun="front_cam_set_x_offset(896)"/>
      <call_once fun="win_state = 0"/>
      <call fun="fly_through_window()"/>
    </block>

    <block name="Search item A">
      <call_once fun="front_cam_set_x_offset(512)"/>
      <call_once fun="detector_disable_all()"/>
      <call_once fun="detector.item_bottom->active = true"/>
      <call_once fun="detector.item_front->active = true"/>
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="front_marker_heading_change()"/>
    </block>

    <block name="Approach item A">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="front_marker_approach()"/>
      <exception cond="marker_lost == true" deroute="Search item A"/>
      <exception cond="marker1.found_time > 1" deroute="Center item A"/>
    </block>

    <block name="Center item A">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="marker_center_land(0.1, 0, 0)"/>
      <exception cond="1 > marker1.found_time" deroute="Search item A"/>
      <exception cond="marker1.found_time > 4" deroute="Land item A"/>
    </block>

    <block name="Land item A">
      <call fun="marker_center_land(0.05, 0.4, 0.5)"/>
      <call_once fun="KillEngines()"/>
      <!-- TODO: exception conditions -->
    </block>

    <block name="Grab item A">
      <call_once fun="close_gripper()"/>
      <while cond="2 > block_time"/>
    </block>

    <block name="Take-off from item A">
      <!-- TODO: start engines, geo init, take-off, hover a bit -->
      <!-- TODO: exception conditions (check if item is grabbed) -->
    </block>

    <block name="Search bucket A">
      <call_once fun="front_cam_set_x_offset(512)"/>
      <call_once fun="detector_disable_all()"/>
      <call_once fun="detector.bucket_bottom->active = true"/>
      <call_once fun="detector.bucket_front->active = true"/>
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="front_marker_heading_change()"/>
    </block>

    <block name="Approach bucket A">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="front_marker_approach()"/>
      <exception cond="marker_lost == true" deroute="Find bucket"/>
    </block>

    <block name="Center bucket A">
      <call fun="Hover(NOM_FLIGHT_ALT)"/>
      <call fun="marker_center_land(0.05, 0, 0)"/>
      <exception cond="0.1 > marker1.found_time" deroute="Find bucket"/>
    </block>

    <block name="Release item A">
      <call_once fun="open_gripper()"/>
    </block>

    <block name="Search item B">
      <!-- TODO -->
    </block>

    <block name="Approach item B">
      <!-- TODO -->
    </block>

    <block name="Land item B">
      <!-- TODO -->
    </block>

    <block name="Grab item B">
      <!-- TODO -->
    </block>

    <block name="Take-off from item B">
      <!-- TODO -->
    </block>

    <block name="Search bucket B">
      <!-- TODO -->
    </block>

    <block name="Approach bucket B">
      <!-- TODO -->
    </block>

    <block name="Center bucket B">
      <!-- TODO -->
    </block>

    <block name="Release item B">
      <!-- TODO -->
    </block>

    <block name="Search exit">
      <!-- TODO -->
    </block>

    <block name="Approach exit">
      <!-- TODO -->
    </block>

    <block name="Fly through exit">
      <call_once fun="front_cam_set_x_offset(896)"/>
      <call_once fun="win_state = 0"/>
      <call fun="fly_through_window()"/>
    </block>

    <block name="Locate landing platform">
      <call_once fun="front_cam_set_x_offset(512)"/>
    </block>

    <block name="Approach landing platform">
      <!-- TODO -->
    </block>

    <block name="Land">
      <!-- TODO -->
    </block>

  </blocks>
</flight_plan>
