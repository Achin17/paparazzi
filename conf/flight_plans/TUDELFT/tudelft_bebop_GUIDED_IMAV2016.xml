  <blocks>
    <!-- Kill the throttle and wait for GPS fix -->
    <block name="Wait GPS">
      <call fun="KillEngines()"/>
      <while cond="!GpsFixValid()"/>
    </block>

    <!-- Wait 5 seconds and then set altitude reference -->
    <block name="Geo init">
      <call fun="ResetAlt()"/>
      <while cond="1"/>
    </block>

    <block name="TakeOff">
      <call fun="StartEngines()"/>
      <call fun="Hover(1.5)"/>
      <call fun="RotateToHeading(0)"/> <!-- not yet working -->
    </block>

     <!--Hover at the current location-->
    <block name="Hover">
      <call fun="Hover(1.5)"/>
      <while cond="1"/>
      <exception cond="marker1.mid && marker1.mid_time > 3" deroute="Experimental Landing"/>
    </block>

    <block name="Find bucket">
      <call fun="bucket_heading_change()"/>
    </block>

    <block name="Approach bucket">
      <call fun="bucket_approach()"/>
    </block>

    <!--<block name="Move Forward">-->
      <!--<call fun="MoveForward(0.2)"/>-->
      <!--<while cond="1"/>-->
      <!--<exception cond="block_time > 2" deroute="Move Right"/>-->
      <!--<exception cond="marker.detected" deroute="Hover"/>-->
    <!--</block>-->


    <block name="Experimental Landing">
      <call fun="Land(0.35)"/>             <!-- this call blocks until altitude < 0.1 -->
      <call_once fun="KillEngines()"/>
      <while cond="1"/>                   <!-- wait indefinitely -->
      <exception cond="!marker1.detected" deroute="Hover"/>
      <!--<exception cond="2.7 > marker.mid_time" deroute="Hover"/>-->
    </block>

    <block name="Detect Landing Pad">
      <call_once fun="detector_locate_helipad()"/>
      <while cond="1"/>
    </block>

    <block name="Detect Bucket">
      <call_once fun="detector_locate_bucket()"/>
      <while cond="1"/>
    </block>


