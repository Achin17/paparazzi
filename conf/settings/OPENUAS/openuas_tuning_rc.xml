<?xml version="1.0"?>
<!DOCTYPE settings SYSTEM "../settings.dtd">

<!-- A configuration to use to help tune an new aircraft, assisted by, or using only, the RC transmitter
This to keep ones eyes on the aircraft and still be able to change some parameters -->

<!--
<!ELEMENT settings (rc_settings?,dl_settings?)>

<!ELEMENT rc_settings (rc_mode*)>
<!ELEMENT rc_mode (rc_setting*)>
<!ELEMENT rc_setting EMPTY>

<!ATTLIST rc_mode name CDATA #REQUIRED>

<!ATTLIST rc_setting var CDATA #REQUIRED>
<!ATTLIST rc_setting type (int16|float) #REQUIRED>
<!ATTLIST rc_setting range CDATA #REQUIRED>
<!ATTLIST rc_setting rc (gain_1_up|gain_2_up|gain_1_down|gain_2_down) #REQUIRED>
-->

<settings>

  <rc_settings>  
  
    <rc_mode NAME="AUTO1">
      <rc_setting VAR="ins_pitch_neutral" RANGE="1.2" RC="gain_1_up"    TYPE="float"/>
      <rc_setting VAR="ins_roll_neutral"  RANGE="-1.2" RC="gain_1_down" TYPE="float"/>
    </rc_mode>
    
    <rc_mode NAME="AUTO2">
      <rc_setting VAR="h_ctl_course_pgain" RANGE="0.5" RC="gain_1_up" TYPE="float"/>
      <rc_setting VAR="flight_altitude" RANGE="-50" RC="gain_1_down" TYPE="float"/>
    </rc_mode>
    
  </rc_settings>
  
</settings>

