<!DOCTYPE module SYSTEM "module.dtd">

<module name="droplet">
  <doc>
    <description>Droplet collision avoidance system</description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="droplet">
        <dl_setting var="disp_thr_1" min="1" step="1" max="10" module="droplet/droplet" shortname="disp_thr_1"/>
        <dl_setting var="obst_thr_1" min="1" step="1" max="200" module="droplet/droplet" shortname="obst_thr_1"/>
        <dl_setting var="wall_following_trim" min="-1." step="0.05" max="1." module="droplet/droplet" shortname="wall_following_trim"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="droplet.h"/>
  </header>
  <init fun="droplet_init()"/>
  <periodic fun="droplet_periodic()" freq="10" autorun="TRUE"/>
  <makefile>
    <file name="droplet.c"/>
  </makefile>
</module>

