<!DOCTYPE module SYSTEM "module.dtd">

<module name="guidance_indi" dir="guidance">
  <doc>
    <description>
      Guidance controller for rotorcraft using INDI
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="guidance_indi">
        <dl_setting var="guidance_indi_pos_gain_xy" min="0" step="0.1" max="10.0" shortname="kp_p_xy" param="GUIDANCE_INDI_POS_GAIN_XY" persistent="true"/>
        <dl_setting var="guidance_indi_pos_gain_z" min="0" step="0.1" max="10.0" shortname="kp_p_z" param="GUIDANCE_INDI_POS_GAIN_Z" persistent="true"/>
        <dl_setting var="guidance_indi_speed_gain_xy" min="0" step="0.1" max="10.0" shortname="kp_v_xy" param="GUIDANCE_INDI_SPEED_GAIN_XY" persistent="true"/>
        <dl_setting var="guidance_indi_speed_gain_z" min="0" step="0.1" max="10.0" shortname="kp_v_z" param="GUIDANCE_INDI_SPEED_GAIN_Z" persistent="true"/>
        <dl_setting var="guidance_indi_max_phi" min="0" step="0.1" max="3.14" shortname="max_phi rad" param="GUIDANCE_H_MAX_PHI"/>
        <dl_setting var="guidance_indi_max_theta" min="0" step="0.1" max="3.14" shortname="max_theta rad" param="GUIDANCE_H_MAX_THETA"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="guidance_indi.h"/>
  </header>
  <init fun="guidance_indi_init()"/>
  <init fun="guidance_indi_enter()"/>
  <makefile target="ap|nps" firmware="rotorcraft">
    <file name="guidance_indi.c" dir="$(SRC_FIRMWARE)/guidance"/>
    <define name="GUIDANCE_INDI" value="TRUE"/>
  </makefile>
</module>
