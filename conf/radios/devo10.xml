<?xml version="1.0"?>

<!-- Radio Devo 10. Standard configuration but Roll and pitch are reversed for 
the mini Delftacopter -->

<!DOCTYPE radio SYSTEM "radio.dtd">



<radio name="Walkera Devo 10" data_min="1000" data_max="2000" sync_min="5000" sync_max="20000" pulse_type="NEGATIVE">
  <channel ctl="LeftStickVertical"    function="THROTTLE"      min="1200" neutral="1200" max="1900" average="0"/>
  <channel ctl="RightStickHorizontal" function="ROLL"          min="1900" neutral="1520" max="1200" average="0"/>
  <channel ctl="RightStickVertical"   function="PITCH"         min="1900" neutral="1520" max="1200" average="0"/>
  <channel ctl="LeftStickHorizontal"  function="YAW"           min="1200" neutral="1520" max="1900" average="0"/>
  <channel ctl="FMODE"                function="MODE"          min="1200" neutral="1520" max="1900" average="1"/>
  <channel ctl="RuddDR"               function="AUX1"          min="1200" neutral="1520" max="1900" average="1"/>
  <channel ctl="MIX"                  function="AUX2"          min="1200" neutral="1520" max="1900" average="0"/>
</radio>







