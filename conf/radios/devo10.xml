<radio name="Walkera Devo 10" data_min="1000" data_max="2000" sync_min="5000" sync_max="20000" pulse_type="NEGATIVE">
  <channel ctl="LeftStickVertical"    function="THROTTLE"      min="1200" neutral="1200" max="1900" average="0"/>
  <channel ctl="RightStickHorizontal" function="ROLL"          min="1900" neutral="1520" max="1200" average="0"/>
  <channel ctl="RightStickVertical"   function="PITCH"         min="1200" neutral="1520" max="1900" average="0"/>
