    <define name="CATASTROPHIC_BAT_LEVEL" value="10.5" unit="V"/>
    <define name="CRITIC_BAT_LEVEL" value="10.8" unit="V"/>
    <define name="LOW_BAT_LEVEL" value="11.0" unit="V"/>
